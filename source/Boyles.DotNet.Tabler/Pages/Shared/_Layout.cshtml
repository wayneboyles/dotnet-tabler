<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>@ViewData["Title"] - Boyles.DotNet.Tabler</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/tabler/core/dist/css/tabler.css" />
        <link rel="stylesheet" href="~/lib/tabler/core/dist/css/tabler-vendors.css" />
        <link rel="stylesheet" href="~/lib/tabler/icons/iconfont/tabler-icons.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta16/dist/css/tabler.min.css" asp-fallback-href="~/lib/tabler/core/dist/css/tabler.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta16/dist/css/tabler-vendors.min.css" asp-fallback-href="~/lib/tabler/core/dist/css/tabler-vendors.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons@1.118.0/iconfont/tabler-icons.min.css" asp-fallback-href="~/lib/tabler/icons/iconfont/tabler-icons.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    @await RenderSectionAsync("styles", required: false)
</head>
<body>
   <div class="page">
        <header class="navbar navbar-expand-md navbar-dark d-print-none">
            <div class="container-xl">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu"
                    aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a asp-area="" asp-page="">
                        <img src="/images/logos/logo-white.svg" width="110" height="32" alt="Boyles.Razor.Tabler" class="navbar-brand-image">
                    </a>
                </h1>
                <div class="navbar-nav flex-row order-md-last">
                    <div class="nav-item d-none d-md-flex me-3">
                        <div class="btn-list">
                            <!-- ToDo: Button List -->
                        </div>
                    </div>
                    <div class="d-none d-md-flex">
                        <a href="#" id="dark-mode" class="nav-link px-0 hide-theme-dark" title="Enable Dark Mode" data-bs-toggle="tooltip" data-bs-placement="bottom">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z" />
                            </svg>
                        </a>
                        <a href="#" id="light-mode" class="nav-link px-0 hide-theme-light" title="Enable Light Mode" data-bs-toggle="tooltip" data-bs-placement="bottom">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <circle cx="12" cy="12" r="4" />
                                <path d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7" />
                            </svg>
                        </a>
                        <div class="nav-item dropdown d-none d-md-flex me-3">
                            <!-- ToDo: Notifications -->                            
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <!-- ToDo: User Menu -->
                        <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open User Menu">
                            <span class="avatar avatar-sm" style="background-image: url(/images/avatars/blank.png)"></span>
                            <div class="d-none d-xl-block ps-2">
                                <div>A User</div>
                                <div class="mt-1 small text-muted">UI Designer</div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <a asp-area="Account" asp-page="" class="dropdown-item">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">Settings</a>
                            <a href="#" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="navbar-expand-md">
            <div class="collapse navbar-collapse" id="navbar-menu">
                <div class="navbar navbar-light">
                    <div class="container-xl">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-home"></i>
                                    </span>
                                    <span class="nav-link-title">
                                        Home
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <div class="my-2 my-md-0 flex-grow-1 flex-md-grow-0 order-first order-md-last">
                            <!-- ToDo: Search -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <!-- Page header -->
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <!-- Page pre-title -->
                            <div class="page-pretitle">
                                @ViewData["SubTitle"]
                            </div>
                            <h2 class="page-title">
                                @ViewData["Title"]
                            </h2>
                        </div>
                        <!-- ToDo: Page title actions -->
                        <div class="col-12 col-md-auto ms-auto d-print-none">
                            
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page body -->
            <div class="page-body">
                <div class="container-xl">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer footer-transparent d-print-none">
                <div class="container-xl">
                    <div class="row text-center align-items-center flex-row-reverse">
                        <div class="col-lg-auto ms-lg-auto">
                            
                        </div>
                        <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                            <ul class="list-inline list-inline-dots mb-0">
                                <li class="list-inline-item">
                                    Copyright &copy; @DateTime.Now.Year
                                    <a href="." class="link-secondary">Boyles.DotNet.Tabler</a>.
                                    All rights reserved.
                                </li>
                                <li class="list-inline-item">
                                    @*<a href="./changelog.html" class="link-secondary" rel="noopener">
                                        v1.0.0-beta15
                                    </a>*@
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/tabler/core/dist/js/tabler.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta16/dist/js/tabler.min.js" asp-fallback-src="~/lib/tabler/core/dist/js/tabler.min.js"></script>
    </environment>

    @await RenderSectionAsync("scripts", required: false)
</body>
</html>